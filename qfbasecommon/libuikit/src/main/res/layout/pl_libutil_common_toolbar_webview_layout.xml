<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color_common"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_common_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_color_common"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_app_common_tv_toolbar_back"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:ellipsize="end"
            android:lines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="16sp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_common_tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:lines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="16sp"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_common_tv_toolbar_subtitle"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/app_common_tv_toolbar_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:src="@drawable/pl_libutil_share_icon"
            android:visibility="gone"
             />

        <ImageView
            android:id="@+id/app_common_tv_toolbar_question_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:src="@drawable/ic_question"
            android:visibility="gone"
             />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/v_fragment_discover_xian"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_common_appcolor" />
    <!--toolbar shadow view-->
    <!--<include layout="@layout/pl_libutil_toolbar_shadow_layout" />-->
</LinearLayout>

