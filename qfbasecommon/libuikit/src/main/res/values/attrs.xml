<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PlLibutilSwipeMenuView">
        <attr name="pl_libutil_swipeEnable" format="boolean" />
        <attr name="pl_libutil_ios" format="boolean" />
        <attr name="pl_libutil_leftSwipe" format="boolean" />
    </declare-styleable>

    <declare-styleable name="pl_libuikit_RCAttrs">
        <attr name="round_as_circle" format="boolean" />
        <attr name="round_corner" format="integer|dimension" />
        <attr name="round_corner_top_left" format="integer|dimension" />
        <attr name="round_corner_top_right" format="integer|dimension" />
        <attr name="round_corner_bottom_left" format="integer|dimension" />
        <attr name="round_corner_bottom_right" format="integer|dimension" />
        <attr name="stroke_color" format="color|reference" />
        <attr name="stroke_width" format="integer|dimension" />
        <attr name="clip_background" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ViewSizeCalculate">
        <attr name="widthRatio" format="float" />
        <attr name="heightRatio" format="float" />
        <attr name="datumRatio" format="enum">
            <enum name="datumWidth" value="1" />
            <enum name="datumHeight" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="Pulsator4Droid">
        <attr name="pulse_count" format="integer" />
        <attr name="pulse_duration" format="integer" />
        <attr name="pulse_color" format="color" />
        <attr name="pulse_color_end" format="color" />
        <attr name="pulse_repeat" format="integer" />
        <attr name="pulse_maxScale" format="float" />
        <attr name="pulse_startFromScratch" format="boolean" />
        <attr name="pulse_interpolator" format="enum">
            <enum name="Linear" value="0" />
            <enum name="Accelerate" value="1" />
            <enum name="Decelerate" value="2" />
            <enum name="AccelerateDecelerate" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="flFlow" format="boolean" />
        <attr name="flChildSpacing" format="enum|dimension">
            <enum name="auto" value="-65536" />
        </attr>
        <attr name="flMinChildSpacing" format="dimension" />
        <attr name="flChildSpacingForLastRow" format="enum|dimension">
            <enum name="auto" value="-65536" />
            <enum name="align" value="-65537" />
        </attr>
        <attr name="flRowSpacing" format="enum|dimension">
            <enum name="auto" value="-65536" />
        </attr>
        <attr name="flRtl" format="boolean" />
        <attr name="flMaxRows" format="integer" />
        <attr name="flRowVerticalGravity" format="enum">
            <enum name="auto" value="-65536" />
            <enum name="top" value="0x30" />
            <enum name="center" value="0x10" />
            <enum name="bottom" value="0x50" />
        </attr>
        <attr name="android:gravity" />
    </declare-styleable>

    <declare-styleable name="ZButton">
        <!-- 按钮文本 -->
        <attr name="text" format="string|reference" />
        <!-- 按钮左侧icon -->
        <attr name="icon" format="reference" />
        <!-- enable 状态的样式 -->
        <attr name="normalTextStyle" format="reference" />
        <!-- disable 状态的样式 -->
        <attr name="disableTextStyle" format="reference" />
        <!-- enabled 开关 -->
        <attr name="enabled" format="boolean" />
        <!-- 文字与icon距离 -->
        <attr name="iconMarginEnd" format="dimension" />
        <!-- 按钮布局样式 -->
        <attr name="layoutType" format="enum">
            <enum name="center" value="1" />
            <enum name="left" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="pl_libgift_BannerView">
        <attr name="pl_libgift_canLoop" format="boolean" />
    </declare-styleable>

    <declare-styleable name="widget_MainCustomTabLayout">
        <attr name="wmt_default_position" format="integer" />
        <attr name="wmt_unSelected_size" format="dimension" />
        <attr name="wmt_unSelected_color" format="color" />
        <attr name="wmt_selected_size" format="dimension" />
        <attr name="wmt_selected_color" format="color" />
    </declare-styleable>
</resources>