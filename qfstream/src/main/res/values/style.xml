<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Dialog_Anim_Bottom" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_bottom_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_bottom_exit</item>
    </style>

    <style name="ActivityDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <!--没有标题-->
        <item name="windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否有覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--是否浮动-->
        <item name="android:windowIsFloating">true</item>
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!-- 点击空白部分activity不消失 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowFullscreen">false</item>
        <!--背景：透明-->
        <item name="android:windowBackground">@color/transparent</item>
        <!--dialog的整个屏幕的背景是否有遮障层-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="PKActivityDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <!--没有标题-->
        <item name="windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否有覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--是否浮动-->
        <item name="android:windowIsFloating">true</item>
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!-- 点击空白部分activity消失 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFullscreen">false</item>
        <!--背景-->
        <item name="android:windowBackground">@color/white</item>
        <!--背景模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--pk title-->
    <style name="PKActivityDialogImgBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>layout_centerVertical
        <item name="android:layout_marginStart">@dimen/dp_15</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/icon_common_page_back</item>
    </style>

    <style name="PKActivityDialogTxtTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>layout_centerVertical
        <item name="android:layout_centerInParent">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/c_383838</item>
        <item name="android:textSize">@dimen/dp_16</item>
    </style>

    <style name="PartyActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/CommonDialogStyleAnimation</item>
    </style>

</resources>