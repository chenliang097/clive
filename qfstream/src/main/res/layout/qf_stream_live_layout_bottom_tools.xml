<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <!--底部操作-->
    <RelativeLayout
        android:id="@+id/liveRoomBottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp">

        <RelativeLayout
            android:id="@+id/liveRoomBottomChatLayout"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rt_stream_icon_bottom_input_bg">

            <TextView
                android:id="@+id/liveRoomBottomChatTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="@string/stream_bottom_input_hint"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/liveRoomBottomRightLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/liveRoomSettingBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/rt_stream_icon_stream_setting"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/liveRoomBottomGiftImg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="15dp"
                android:src="@drawable/qf_stream_bottom_gift"/>

            <LinearLayout
                android:id="@+id/liveRoomBottomZanLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/liveRoomBottomZanTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/liveRoomBottomZanImg"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/qf_stream_bottom_zan" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</merge>