<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_rank_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_72"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_18"
        android:text="1"
        android:textColor="#808080"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp_47"
        android:layout_height="@dimen/dp_47"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_toEndOf="@+id/tv_rank"
        android:layout_toRightOf="@+id/tv_rank"
        app:actualImageScaleType="centerCrop"
        app:roundAsCircle="true"
        app:roundingBorderColor="#ff0000"
        app:roundingBorderWidth="@dimen/dp_1" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_ranking_count"
        android:layout_marginBottom="@dimen/dp_2_5"
        android:layout_toEndOf="@+id/iv_avatar"
        android:layout_toRightOf="@+id/iv_avatar">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:gravity="bottom"
            android:text="昵称"
            android:textColor="@color/text_nick_name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toEndOf="@+id/tv_name"
            android:layout_toRightOf="@+id/tv_name"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_15"
            android:text="99"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toEndOf="@+id/tv_age"
            android:layout_toRightOf="@+id/tv_age" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_ranking_count"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_37"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_toEndOf="@+id/iv_avatar"
        android:layout_toRightOf="@+id/iv_avatar"
        android:gravity="top"
        android:paddingTop="@dimen/dp_2_5"
        android:text="贡献：1.3万"
        android:textColor="#b5b5b5"
        android:textSize="14sp" />



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_alignStart="@+id/tv_ranking_count"
        android:layout_alignLeft="@+id/tv_ranking_count"
        android:layout_alignParentBottom="true"
        android:background="@color/center_line" />

    <View
        android:layout_width="@dimen/dp_0_5"
        android:layout_height="@dimen/dp_72" />
</RelativeLayout>