<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/centerUserCoverLayout"
        android:layout_width="match_parent"
        android:layout_height="375dp">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            tools:src="@drawable/rt_icon_default" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:background="@color/c_40_black"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:alpha="0.5"
            android:background="@drawable/rt_stream_bg_shade_person"/>
        <RelativeLayout
            android:id="@+id/centerUserInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/centerAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                app:riv_border_width="1dp"
                app:riv_border_color="@color/white"
                app:riv_oval="true"
                android:layout_marginStart="12dp"
                android:src="@drawable/icon_default_avatar"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/centerAvatar">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/centerNickNameTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        tools:text="@string/stream_anchor"/>

                    <TextView
                        android:id="@+id/centerIDTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="@color/c_40_white"
                        tools:text="@string/stream_anchor"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/centerEditTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="center"
                    android:text="@string/stream_center_edit"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    tools:text="@string/stream_center_edit"
                    android:background="@drawable/btn_center_edit"
                    android:visibility="gone"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/centerInsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/centerAvatar"
                android:text="@string/stream_center_ins"
                android:textSize="12sp"
                android:textColor="@color/white"
                tools:text="@string/stream_center_ins"/>

            <TextView
                android:id="@+id/centerGenderTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/centerInsTxt"
                android:drawableStart="@drawable/qf_stream_gender_female"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:text="@string/stream_user_card_female"
                android:textSize="8sp"
                android:textColor="@color/white"
                tools:text="@string/stream_user_card_female"/>

            <TextView
                android:id="@+id/centerLocationTxt"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/centerInsTxt"
                android:layout_toEndOf="@+id/centerGenderTxt"
                android:layout_marginStart="14dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"
                android:text="@string/stream_unknown_location1"
                android:textSize="8sp"
                android:textColor="@color/c_40_white"
                tools:text="@string/stream_unknown_location1"
                android:background="@drawable/btn_center_edit"/>

            <LinearLayout
                android:id="@+id/centerFansLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/centerGenderTxt"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/centerFansNumTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    tools:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:textSize="16sp"
                    android:textColor="@color/color_999999"
                    android:text="@string/stream_center_fans"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/centerFollowLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/centerGenderTxt"
                android:layout_toEndOf="@+id/centerFansLayout"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/centerFollowNumTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    tools:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_999999"
                    android:text="@string/stream_center_follow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/centerLikeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/centerGenderTxt"
                android:layout_toEndOf="@+id/centerFollowLayout"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/centerLikeNumTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    tools:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_999999"
                    android:text="@string/stream_center_like"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/centerTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/centerFansLayout"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/centerTabProductLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_weight="1.0"
                    android:layout_gravity="center"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:background="@drawable/btn_center_edit">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rt_icon_center_product"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="@string/stream_center_tab_product"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/centerTabWalletLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_weight="1.0"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:background="@drawable/btn_center_edit">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rt_icon_center_wallet"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="@string/stream_center_tab_wallet"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/corner_circle_white_top"
        android:layout_below="@+id/centerUserCoverLayout"
        android:layout_marginTop="-50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/c_666666"
            android:text="@string/stream_center_last_see"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c_5_black"
            android:layout_marginTop="12dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/rt_icon_no_data"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="@color/c_666666"
            android:text="@string/stream_center_no_data"/>

    </LinearLayout>
    <include
        android:id="@+id/toolbar"
        layout="@layout/core_util_toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="44dp" />

</RelativeLayout>