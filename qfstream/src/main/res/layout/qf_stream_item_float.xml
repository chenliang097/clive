<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_91"
    android:background="@drawable/bg_item_float_msg_normal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_selected_flag"
        android:layout_width="@dimen/dp_23"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_float_msg_type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_19"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center"
        android:minWidth="@dimen/dp_38"
        android:textSize="@dimen/sp_9" />

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="@dimen/dp_88"
        android:layout_height="@dimen/dp_33"
        android:layout_centerInParent="true"
        app:actualImageScaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_float_msg_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/c_8c8c8c"
        android:textSize="@dimen/sp_11" />

</RelativeLayout>