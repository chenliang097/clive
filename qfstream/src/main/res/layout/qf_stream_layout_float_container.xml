<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_280">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_17"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/tv_float_msg_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_3"
                android:text="0"
                android:textColor="@color/c_bg_float_msg_num"
                android:textSize="@dimen/sp_11" />

        </LinearLayout>

        <com.rongtuoyouxuan.libuikit.widget.banner.BannerView
            android:id="@+id/vp_float_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12" />

    </LinearLayout>

    <com.rongtuoyouxuan.libuikit.layout.CommonStatusView
        android:id="@+id/status_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
