<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/rt_c_161722">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/streamEndCloseImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34dp"
            android:layout_marginStart="16dp"
            android:padding="7dp"
            android:src="@drawable/icon_white_back" />

        <TextView
            android:id="@+id/streamEndAnchorCenterTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_centerHorizontal="true"
            android:text="@string/stream_end_anchor_center"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/anchorIdToStartTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="12dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_alignParentEnd="true"
            android:text="@string/rt_stream_anchor_center_right"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/rt_stream_end_btn"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/anchorCenterLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/anchorCenterAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_default_avatar"
            app:riv_oval="true"/>
        <TextView
            android:id="@+id/anchorCenterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/anchorCenterMagicindicator"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="5dp"/>

    <com.rongtuoyouxuan.libuikit.layout.rtlviewpager.RtlViewPager
        android:id="@+id/anchorCenterViewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

</LinearLayout>