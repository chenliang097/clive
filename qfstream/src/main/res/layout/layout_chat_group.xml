<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="115dp" />

    <View
        android:id="@+id/viewRv"
        android:layout_width="115dp"
        android:layout_height="175dp"
        android:layout_gravity="end"
        android:layout_marginVertical="10dp" />

    <FrameLayout
        android:id="@+id/frame_message_edit"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/corner_circle_white_top"
        android:paddingHorizontal="10dp">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="72dp"
            android:background="@drawable/qf_stream_bg_edit"
            android:gravity="center_vertical"
            android:hint="@string/stream_input_hit"
            android:inputType="text"
            android:maxLength="40"
            android:paddingVertical="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="55dp"
            android:textColor="@color/color_222222"
            android:textColorHint="@color/c_chat_999999"
            android:textSize="14sp"
            tools:text="131313131313131313131313131313131313131313131313131313131313131313131313131313131313" />

        <TextView
            android:id="@+id/tvLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginEnd="85dp"
            android:text="0/40"
            android:textColor="@color/c_chat_999999"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btSend"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="58dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/qf_stream_btn_send"
            android:singleLine="true"
            android:text="@string/stream_bottom_stream_send"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </FrameLayout>
</FrameLayout>