<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="65dp"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/itemAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        android:src="@drawable/icon_default_avatar"/>

    <TextView
        android:id="@+id/itemNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/itemAvatar"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxEms="11"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <LinearLayout
        android:id="@+id/itemBtnLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:layout_marginEnd="12dp">

        <TextView
            android:id="@+id/itemBtn"
            android:layout_width="72dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/rt_common_btn"/>

        <ImageView
            android:id="@+id/itemRemoveImg"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:src="@drawable/qf_stream_icon_close_gray"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>