<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomItemRootView"
    android:layout_width="66dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="16dp">

    <com.rongtuoyouxuan.chatlive.stream.view.beauty.widget.MenuItemButton
        android:id="@+id/bottomImageItem"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/icon_eye" />

    <CheckedTextView
        android:id="@+id/bottomTextItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="TextView"
        android:textColor="@color/text_color"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/bottomImageItem"
        app:layout_constraintStart_toStartOf="@+id/bottomImageItem"
        app:layout_constraintTop_toBottomOf="@+id/bottomImageItem"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <View
        android:id="@+id/hint"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_5_red"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/bottomTextItem"
        app:layout_constraintStart_toStartOf="@id/bottomTextItem"
        app:layout_constraintTop_toBottomOf="@id/bottomTextItem" />

</androidx.constraintlayout.widget.ConstraintLayout>