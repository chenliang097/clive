<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/coverBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_70_black"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:scaleType="centerCrop"
        android:src="@drawable/qf_stream_bg_live_down" />

    <ImageView
        android:id="@+id/liveEndCloseImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp"
        android:padding="7dp"
        android:src="@drawable/qf_stream_icon_close" />

    <TextView
        android:id="@+id/liveEndTitleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="@string/stream_live_end_title"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/liveEndAvatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/liveEndTitleTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_default_live_common"
        app:riv_mutate_background="true"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/liveEndNameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liveEndAvatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/liveEndFollowTxt"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_below="@id/liveEndNameTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/rt_common_btn"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="@string/stream_user_card_add_folow"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/liveEndTimeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/liveEndFollowTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/stream_live_time"
        android:textColor="@color/c_stream_end_time"
        android:textSize="16sp" />

    <Button
        android:id="@+id/liveEndReturnMainBtn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/rt_common_btn"
        android:text="@string/stream_return_main"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>