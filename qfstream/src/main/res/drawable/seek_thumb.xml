<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="oval">
            <size
                android:width="20dp"
                android:height="20dp" />
            <solid android:color="@color/seek_bar_progress" />
        </shape>
    </item>

    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape
            android:shape="oval">
            <size
                android:width="16dp"
                android:height="16dp" />
            <solid android:color="@color/seek_bar_background" />
        </shape>
    </item>

</layer-list>