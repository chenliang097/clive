<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rt_c_161722"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/core_util_toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="44dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/rt_icon_wallet_coin"/>

    <TextView
        android:id="@+id/walletBalanceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="28sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/buyGoldBanlanceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="@string/stream_wallet_recharge"/>

        <TextView
            android:id="@+id/buyGoldRechargeReTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="14dp"
            android:textColor="@color/c_40_white"
            android:textSize="14sp"
            android:text="@string/stream_wallet_recharge_record"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/buyGoldRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:overScrollMode="never"
        android:scrollbars="none" />
    <Button
        android:id="@+id/buyGoldBtn"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rt_common_btn"
        android:gravity="center"
        android:text="@string/rt_recharge_dialog_btn"
        android:textColor="@color/white"
        android:textSize="18sp"/>

</LinearLayout>