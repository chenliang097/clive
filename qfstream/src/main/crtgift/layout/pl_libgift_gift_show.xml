<?xml version="1.0" encoding="utf-8"?>
<com.rongtuoyouxuan.chatlive.crtgift.view.layout.GiftRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_gift_one"
    android:layout_width="270dp"
    android:layout_height="50dp">

    <RelativeLayout
        android:id="@+id/rl_gift_info_wrap_one"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_15">

        <RelativeLayout
            android:id="@+id/rl_gift_info_one"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_5">

            <ImageView
                android:id="@+id/rb_gift_info_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gift_side_item_bg" />


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/civ_user_avatar_one"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_2"
                android:scaleType="centerCrop"
                android:src="@drawable/default_icon_man"
                app:riv_mutate_background="true"
                app:riv_oval="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_toEndOf="@id/civ_user_avatar_one"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_name_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/dp_100"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="" />

                <TextView
                    android:id="@+id/tv_gift_info_one"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/dp_100"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/tv_gift_img_one"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_10" />
    </RelativeLayout>

    <com.rongtuoyouxuan.chatlive.crtgift.widget.GiftColorTextView
        android:id="@+id/tv_gift_num_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_toEndOf="@id/rl_gift_info_wrap_one"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="" />
</com.rongtuoyouxuan.chatlive.crtgift.view.layout.GiftRelativeLayout>