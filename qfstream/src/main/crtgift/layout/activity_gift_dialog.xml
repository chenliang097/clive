<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:fitsSystemWindows="true"
    tools:ignore="MissingDefaultResource,ResourceName">

    <View
        android:id="@+id/viewBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvLuckyContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLuckyTitle"
        tools:background="@drawable/icon_gift_lucky_bg" />

    <View
        android:id="@+id/viewBg2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewBg" />

    <TextView
        android:id="@+id/tvLuckyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:paddingTop="7.5dp"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/viewBg"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="幸运来临" />

    <TextView
        android:id="@+id/tvLuckyContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="15dp"
        android:paddingBottom="7.5dp"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/viewBg"
        app:layout_constraintStart_toStartOf="@+id/viewBg"
        app:layout_constraintTop_toBottomOf="@+id/tvLuckyTitle"
        tools:text="赠送幸运礼物，得1000倍大奖！" />

    <ImageView
        android:id="@+id/ivLuckyDesc"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="5dp"
        android:padding="5dp"
        android:src="@drawable/icon_gift_lucky_help"
        app:layout_constraintBottom_toBottomOf="@+id/tvLuckyTitle"
        app:layout_constraintEnd_toEndOf="@+id/viewBg"
        app:layout_constraintTop_toTopOf="@+id/tvLuckyTitle" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/gpLucky"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="viewBg,tvLuckyTitle,tvLuckyContent,ivLuckyDesc" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gift_bg_gift_broad"
        app:layout_constraintBottom_toBottomOf="@+id/space1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tabLayout" />

    <com.rongtuoyouxuan.chatlive.crtuikit.widget.GiftTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@+id/ivBox"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewBg"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:tabMinWidth="28dp"
        app:tabMode="scrollable"
        app:tabPaddingEnd="4dp"
        app:tabPaddingStart="25dp"
        app:tabRippleColor="@color/c_transparent" />

    <TextView
        android:id="@+id/ivBox"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:background="@drawable/bg_gift_pannel_center"
        android:text="@string/rt_gift_pannel_center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tabLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tabLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tabLayout"
        app:layout_constraintTop_toTopOf="@+id/tabLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/rt_gift_pannel_title"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout" />


    <RelativeLayout
        android:id="@+id/flContainerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/flContainer">
        <TextView
            android:id="@+id/tvCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/icon_rt_coin"
            android:layout_centerVertical="true"
            android:drawablePadding="4dp"
            android:includeFontPadding="false"
            android:maxWidth="100dp"
            android:maxLines="1"
            android:text="0"
            android:gravity="center_vertical"
            android:textColor="@color/c_40_white"
            android:textSize="13sp"
            tools:text="0000000000000" />
        <TextView
            android:id="@+id/tvRecharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvCoin"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="@string/center_account_charge"
            android:textColor="@color/rt_c_FF2434"
            android:textSize="13sp"/>

        <ImageView
            android:id="@+id/ivRechargeArrow"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tvRecharge"
            android:src="@drawable/rt_icon_red_arrow_right" />

        <View
            android:id="@+id/viewNumBg"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/gift_panel_num_bg"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvSelectNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/ivNumIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/icon_gift_white_arrow"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvSendGift"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rt_common_btn"
            android:gravity="center"
            android:text="@string/gift_panel_send"
            android:textColor="@color/white"
            android:textSize="14sp"/>
    </RelativeLayout>


    <android.widget.Space
        android:id="@+id/space1"
        android:layout_width="0dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flContainerInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>