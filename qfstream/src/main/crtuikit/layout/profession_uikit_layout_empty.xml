<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <ImageView
        android:id="@+id/empty_im"
        android:layout_width="320pt"
        android:layout_height="320pt"
        android:src="@drawable/icon_empty_callback" />


    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12pt"
        android:fontFamily="@font/boboo_regular"
        android:text="@string/no_datas"
        android:textColor="#999999"
        android:textSize="24pt" />

    <TextView
        android:id="@+id/empty_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24pt"
        android:paddingLeft="20pt"
        android:paddingTop="10pt"
        android:paddingRight="18pt"
        android:paddingBottom="10pt"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="gone" />

</LinearLayout>
