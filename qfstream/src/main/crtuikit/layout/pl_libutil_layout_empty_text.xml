<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="101dp"/>

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="2dp"
        android:text="@string/no_datas"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="60dp" />
    <LinearLayout
        android:id="@+id/emptyLayoutToLive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_right_solid"
                android:drawablePadding="@dimen/dp_2"
                android:text="@string/gift_receive_tips"
                android:textColor="@color/c_f9610f"
                android:textSize="@dimen/dp_11"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gift_receive_tips_content"
                android:textColor="@color/c_565656"
                android:textSize="@dimen/dp_11"/>
        </LinearLayout>
        <Button
            android:id="@+id/emptyBtnToLive"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/shade_to_live_btn"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/gift_receive_to_live"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </LinearLayout>


</LinearLayout>