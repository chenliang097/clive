<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application theme. -->
    <style name="pl_libutil_MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pl_libutil_colorPrimary</item>
        <item name="colorPrimaryDark">@color/pl_libutil_colorPrimaryDark</item>
        <item name="colorAccent">@color/pl_libutil_colorAccent</item>
        <item name="android:textCursorDrawable">@drawable/pl_libutil_app_edit_text_cursor</item>
        <item name="android:windowAnimationStyle">@style/pl_libutil_AnimationActivity</item>
    </style>

    <style name="pl_main_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- This disables the black preview screen -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <!--https://stackoverflow.com/a/38282149/3326683-->
    <style name="pl_libutil_MyAppTheme.WhiteAccent" parent="@style/pl_libutil_MyAppTheme">
        <item name="colorAccent">@color/white</item>
    </style>


    <style name="pl_libutil_MyAppTheme.BlueAccent" parent="@style/pl_libutil_MyAppTheme">
        <item name="colorAccent">@color/pl_libutil_common_loading_progressbar_color</item> <!-- Whatever color you want-->
    </style>

    <style name="pl_libutil_AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/pl_libutil_anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/pl_libutil_anim_exit</item>
        <item name="android:activityCloseExitAnimation">@anim/pl_libutil_back_enter</item>
        <item name="android:activityCloseEnterAnimation">@anim/pl_libutil_back_exit</item>
    </style>


    <style name="pl_libutil_AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <style name="pl_libutil_BottomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/pl_libutil_AnimBottom</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="pl_libutil_TranslucentBottomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/pl_libutil_AnimBottom</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="pl_libutil_DiyDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="pl_libutil_loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="pl_libutil_MyTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="commenDialogStyleNoDim" parent="Theme.AppCompat.Light.Dialog">
        <!--没有标题-->
        <item name="windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否有覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--是否浮动-->
        <item name="android:windowIsFloating">true</item>
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!-- 点击空白部分activity消失 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFullscreen">false</item>
        <!--背景-->
        <item name="android:windowBackground">@color/transparent</item>
        <!--背景模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--自定义圆形ImageView样式-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <!--自定义圆形头像样式-->
    <declare-styleable name="AvatarImageLayout">
        <attr name="avatar_src" format="reference" />
        <attr name="avatar_bottom_text_content" format="string" />
        <attr name="avatar_bottom_text_size" format="dimension" />
        <attr name="avatar_bottom_text_color" format="color" />
        <attr name="avatar_bottom_text_background" format="reference|color" />
        <attr name="avatar_bottom_img_src" format="reference" />
        <attr name="avatar_show_bottom_text" format="boolean" />
        <attr name="avatar_show_bottom_img" format="boolean" />
    </declare-styleable>

    <style name="pl_libgift_DiyDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>